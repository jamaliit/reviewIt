@model IEnumerable<reviewIt.Core.ViewModels.AdvertisementViewModel>
@{
    ViewBag.Title = "All Photos";
}
<link href="~/Content/rateit.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/js/datatables/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Content/js/datatables/jquery.dataTables.min.js"></script>
<br/>
<h3>All Photos</h3>
<br/>
  
          <table id="example">
              <tr>
                  <th></th>
                  
              </tr>

              <tr>
                  <td>
                      @foreach (var item in Model)
                      {
                          <a href='@Url.Action("Details", "Advertisement", new { id = item.AdvertiseID }, null)'>
                              <img src="@Url.Content("~/Uploads/"+@item.FilePath)" style=" height:200px;width:250px;" alt="" />
                          </a>
                      }
                  </td>
              </tr>
    </table>


<style>
     
     a {
        padding-left: 0px;
        padding-right: 0px;
    }   
    a>img{
           padding-left:4px;
           padding-right:4px;
           padding-bottom:4px;
    }
</style>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>